<h1>AJAX Page</h1>

<script type="text/javascript">
	function loadPosts() {
		$.getJSON("/posts.json", function(data){
			var html = "";

			$.each(data,function(index){
				html += "<b><i>" + data[index].content + "</i></b><br>"
			});

			$("#posts").html(html);

		});
	}

</script>

<div id="posts">
	<a href="javascript:loadPosts();">Our posts</a>
</div>